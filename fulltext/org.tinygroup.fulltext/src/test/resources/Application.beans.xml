<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                    http://www.springframework.org/schema/context
                    http://www.springframework.org/schema/context/spring-context-2.5.xsd"
	default-autowire="byName" default-lazy-init="true">
	<bean id="fileResolver" scope="singleton"
		class="org.tinygroup.fileresolver.impl.FileResolverImpl">
		<property name="fileProcessorList">
			<list>
				<ref bean="i18nFileProcessor" />
				<ref bean="xStreamFileProcessor" />
				<ref bean="tinyMacroFileProcessor" />
			</list>
		</property>
	</bean>
	
	<bean id="fileResolverProcessor" scope="singleton"
		class="org.tinygroup.fileresolver.applicationprocessor.FileResolverProcessor">
		<property name="fileResolver" ref="fileResolver"></property>
	</bean>
	
	<bean id="memoryFullText" scope="singleton"
		class="org.tinygroup.fulltext.MemoryFullText">
		<property name="documentListCreators">
			<list>
				<ref bean="fileDocumentListCreator" />
				<ref bean="fileObjectDocumentListCreator" />
				<ref bean="resultSetDocumentListCreator" />
			</list>
		</property>
		<property name="indexOperator" ref="memoryIndexOperator"></property>
	</bean>
	
	<bean id="memoryIndexOperator" scope="singleton"
		class="org.tinygroup.fulltext.MemoryIndexOperator">
	</bean>
	
	<bean id="fileDocumentListCreator" scope="singleton"
		class="org.tinygroup.fulltext.file.FileDocumentListCreator">
		<property name="documentCreators">
			<list>
				<ref bean="iniDocumentCreator" />
				<ref bean="textDocumentCreator" />
			</list>
		</property>
	</bean>
	
	<bean id="fileObjectDocumentListCreator" scope="singleton"
		class="org.tinygroup.fulltext.file.FileObjectDocumentListCreator">
		<property name="documentCreators">
			<list>
				<ref bean="iniDocumentCreator" />
				<ref bean="textDocumentCreator" />
			</list>
		</property>
	</bean>
	
	<bean id="resultSetDocumentListCreator" scope="singleton"
		class="org.tinygroup.fulltext.db.ResultSetDocumentListCreator">
		<property name="templateDocumentCreator" ref="sqlTemplate"></property>
	</bean>
	
	<bean id="iniDocumentCreator" scope="singleton"
		class="org.tinygroup.fulltext.file.IniDocumentCreator">
		<property name="encode" value="utf-8"></property>
		<property name="templateDocumentCreator" ref="iniTemplate"></property>
	</bean>
	
	<bean id="textDocumentCreator" scope="singleton"
		class="org.tinygroup.fulltext.file.TextDocumentCreator">
		<property name="encode" value="utf-8"></property>
	</bean>
	
	<bean id="iniTemplate" scope="singleton"
		class="org.tinygroup.fulltext.TemplateDocumentCreator">
		<property name="idRule" value="/ini_id.page"></property>
		<property name="typeRule" value="/ini_type.page"></property>
		<property name="titleRule" value="/ini_title.page"></property>
		<property name="abstractRule" value="/ini_abstract.page"></property>
	</bean>
	
	<bean id="sqlTemplate" scope="singleton"
		class="org.tinygroup.fulltext.TemplateDocumentCreator">
		<property name="idRule" value="/sql_id.page"></property>
		<property name="typeRule" value="/sql_type.page"></property>
		<property name="titleRule" value="/sql_title.page"></property>
		<property name="abstractRule" value="/sql_abstract.page"></property>
	</bean>
	
	<bean id="derbyDataSource" class="org.apache.commons.dbcp.BasicDataSource">
		<property name="driverClassName">
			<value>org.apache.derby.jdbc.EmbeddedDriver</value>
		</property>
		<property name="url">
			<value>jdbc:derby:TESTDB;create=true</value>
		</property>
		<property name="username">
			<value>opensource</value>
		</property>
		<property name="password">
			<value>opensource</value>
		</property>
	</bean>
	
</beans>
