<standard-types package-name="org.tinygroup">
  <standard-type id="type_tiny_text">
    <dialect-type-list/>
  </standard-type>
  <standard-type id="type_text">
    <dialect-type-list/>
  </standard-type>
  <standard-type id="type_medium_text">
    <dialect-type-list/>
  </standard-type>
  <standard-type id="type_long_text">
    <placeholder-list>
      <placeholder name="l" title="长度">
        <description>字符串的长度</description>
      </placeholder>
    </placeholder-list>
    <dialect-type-list/>
  </standard-type>
  <standard-type id="type_blob">
    <dialect-type-list/>
  </standard-type>
  <standard-type id="type_char">
    <placeholder-list>
      <placeholder name="length" title="长度">
        <description>字符串的长度</description>
      </placeholder>
    </placeholder-list>
    <dialect-type-list>
       <dialect-type language="java" base-type="String"/>
      <dialect-type language="derby" base-type="VARCHAR" ext-type="(${length})" default-value="">
        <placeholder-value name="length"/>
      </dialect-type>
      <dialect-type language="mysql" base-type="VARCHAR" ext-type="(${length})" default-value="">
        <placeholder-value name="length"/>
      </dialect-type>
      <dialect-type language="oracle" base-type="VARCHAR2" ext-type="(${length})" default-value="">
        <placeholder-value name="length"/>
      </dialect-type>
      <dialect-type language="h2" base-type="VARCHAR" ext-type="(${length})" default-value="">
        <placeholder-value name="length"/>
      </dialect-type>
    </dialect-type-list>
  </standard-type>
  <standard-type id="type_varchar">
    <placeholder-list>
      <placeholder name="length" title="长度">
        <description>字符串的长度</description>
      </placeholder>
    </placeholder-list>
    <dialect-type-list>
       <dialect-type language="java" base-type="String"/>
      <dialect-type language="derby" base-type="VARCHAR" ext-type="(${length})" default-value="">
        <placeholder-value name="length"/>
      </dialect-type>
      <dialect-type language="mysql" base-type="VARCHAR" ext-type="(${length})" default-value="">
        <placeholder-value name="length"/>
      </dialect-type>
      <dialect-type language="oracle" base-type="VARCHAR2" ext-type="(${length})" default-value="">
        <placeholder-value name="length"/>
      </dialect-type>
      <dialect-type language="h2" base-type="VARCHAR" ext-type="(${length})" default-value="">
        <placeholder-value name="length"/>
      </dialect-type>
    </dialect-type-list>
  </standard-type>
  <standard-type id="type_tiny_int">
    <dialect-type-list>
      <dialect-type language="java" base-type="Integer"/>
      <dialect-type language="derby" base-type="INT" ext-type=""/>
      <dialect-type language="mysql" base-type="INT"/>
      <dialect-type language="oracle" base-type="NUMBER"/>
      <dialect-type language="h2" base-type="TINYINT"/>
    </dialect-type-list>
  </standard-type>
  <standard-type id="type_small_int">
    <dialect-type-list/>
  </standard-type>
  <standard-type id="type_big_int">
    <dialect-type-list/>
  </standard-type>
  <standard-type id="type_date">
    <dialect-type-list/>
  </standard-type>
  <standard-type id="type_datetime">
    <dialect-type-list/>
  </standard-type>
  <standard-type id="type_decimal">
    <placeholder-list>
      <placeholder name="precision" title="精度">
        <description>字符串的长度</description>
      </placeholder>
      <placeholder name="scale" title="小数位后数字">
        <description>字符串的长度</description>
      </placeholder>
    </placeholder-list>
    <dialect-type-list/>
  </standard-type>
  <standard-type id="type_double">
    <dialect-type-list/>
  </standard-type>
  <standard-type id="type_float">
    <dialect-type-list/>
  </standard-type>
  <standard-type id="type_int">
    <dialect-type-list>
      <dialect-type language="java" base-type="Integer"/>
      <dialect-type language="derby" base-type="INT" ext-type=""/>
      <dialect-type language="mysql" base-type="INT"/>
      <dialect-type language="oracle" base-type="NUMBER"/>
      <dialect-type language="h2" base-type="integer"/>
    </dialect-type-list>
  </standard-type>
  <standard-type id="type_integer">
    <dialect-type-list/>
  </standard-type>
  <standard-type id="type_long">
    <dialect-type-list/>
  </standard-type>
</standard-types>